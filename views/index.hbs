<div class="row">
   <div class="col-md-6">
      <h3>Burgers ready to nom:</h3>
      <ol>
         {{#each burgers}}
            {{#unless devoured}}
            <li class="my-3">
               {{burger_name}}
               <button class="nomBurger btn btn-primary justify-content-end" data-id="{{id}}" data-devoured-state="1">Nom it!</button>
               <button class="discardBurger btn btn-danger" data-id="{{id}}">Discard</button>
            </li>
            {{/unless}}
         {{/each}}
      </ol>
   </div>

   <div class="col-md-6">
      <h3>Burgers successfully nommed:</h3>
      <ol>
         {{#each burgers}}
            {{#if devoured}}
            <li>
               {{burger_name}}
               <button class="discardBurger btn btn-danger" data-id="{{id}}">Discard</button>
            </li>
            {{/if}}
         {{/each}}
      </ol>
   </div>
</div>